<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/rootlayoutColor</item>
    </style>


    <style name="HomeWeather">

    </style>

    <style name="Temperature" parent="HomeWeather">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="City" parent="HomeWeather">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Humidity" parent="HomeWeather">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HomeCardsTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="HomeCardsIcon">
        <item name="android:width">150dp</item>
        <item name="android:height">150dp</item>
    </style>
    <style name="signinButton">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primary</item>
    </style>
    <style name="signinText">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:color">@color/primary_dark</item>
    </style>


</resources>
